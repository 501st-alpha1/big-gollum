<!DOCTYPE html>
<html>
<head>
  <title>BigGollum</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="alert-container">
    <% flash.each do |key, msg| %>
      <% if ! msg.empty? %>
      <div data-alert class="alert alert-<%= key %>">
      <%= msg %>
      </div>
      <% end %>
    <% end %>
  </div>

  <%= yield %>
</body>
</html>
